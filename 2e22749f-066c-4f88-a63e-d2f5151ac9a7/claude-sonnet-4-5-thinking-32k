        }

        #gameContainer {
            position: relative;
            width: 900px;
            height: 600px;
            background: #1a1a2e;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            overflow: hidden;
        }

        #gameCanvas {
            display: block;
            width: 100%;
            height: 100%;
            background: #0f3460;
        }

        #ui {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            padding: 20px;
            background: linear-gradient(to bottom, rgba(0, 0, 0, 0.7), transparent);
            color: white;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            pointer-events: none;
            z-index: 10;
        }

        .stat {
            background: rgba(0, 0, 0, 0.6);
            padding: 10px 15px;
            border-radius: 10px;
            border: 2px solid #00d9ff;
            font-size: 16px;
            font-weight: bold;
        }

        #characterInfo {
            text-align: left;
        }

        #gameInfo {
            text-align: right;
        }

        .label {
            color: #00d9ff;
            font-size: 12px;
        }

        .value {
            color: #fff;
            font-size: 20px;
        }

        #healthBar {
            width: 200px;
            height: 20px;
            background: #333;
            border-radius: 10px;
            overflow: hidden;
            margin-top: 5px;
            border: 2px solid #00d9ff;
        }

        #healthFill {
            height: 100%;
            background: linear-gradient(90deg, #ff0000, #ff6b6b);
            transition: width 0.3s;
        }

        #menu {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
            color: white;
            z-index: 100;
            background: rgba(0, 0, 0, 0.9);
            padding: 40px;
            border-radius: 20px;
            border: 3px solid #00d9ff;
        }

        #menu h1 {
            font-size: 32px;
            margin-bottom: 10px;
            color: #00d9ff;
            text-shadow: 0 0 20px #00d9ff;
        }

        #menu h2 {
            font-size: 18px;
            margin-bottom: 30px;
            color: #ffeb3b;
        }

        #menu p {
            font-size: 14px;
            margin: 10px 0;
            line-height: 1.6;
        }

        button {
            background: linear-gradient(135deg, #00d9ff, #0096ff);
            color: white;
            border: none;
            padding: 15px 40px;
            font-size: 18px;
